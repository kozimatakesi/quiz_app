<!doctype html>
<html class="no-js" lang="">

<head>
  <meta charset="utf-8">
  <title>クイズ一覧</title>
  <%- include('head'); %>
</head>

<body>
  <%- include('header'); %>
  <div class="container">
    <div id="js-question" class="mt-3 alert alert-primary" role="alert">
      クイズの一覧です
    </div>
    <table class="table table-bordered">
      <thead>
        <th scope="col">問題</th>
        <th scope="col">選択肢１</th>
        <th scope="col">選択肢２</th>
        <th scope="col">選択肢３</th>
        <th scope="col">答え</th>
      </thead>

        <% quizzes.forEach((quiz) => { %>
        <tbody>
          <th scope="row"><%= quiz.question %></th>
          <td><%= quiz.choices1 %></td>
          <td><%= quiz.choices2 %></td>
          <td><%= quiz.choices3 %></td>
          <td><%= quiz.answer %></td>
          <td>
            <form action="/delete/<%= quiz.id %>" method="post">
              <input type="submit" value="削除">
            </form>
          </td>
        </tbody>
        <% }) %>
    </table>
  </div>
</body>

</html>
